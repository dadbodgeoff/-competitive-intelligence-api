# Production Environment Variables
# Copy this to .env.production and fill in your production values
# NEVER commit .env.production to git!

# ============================================================================
# CRITICAL SECRETS - MUST BE DIFFERENT FROM DEV
# ============================================================================

# Supabase Configuration (Use separate production project)
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key-here

# JWT Configuration (Generate with: openssl rand -base64 64)
JWT_SECRET_KEY=GENERATE-A-STRONG-64-CHARACTER-RANDOM-SECRET-HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# EXTERNAL API KEYS - USE PRODUCTION KEYS
# ============================================================================

# Google APIs (Create separate production keys)
GOOGLE_PLACES_API_KEY=your-production-places-api-key
GOOGLE_GEMINI_API_KEY=your-production-gemini-api-key

# Vertex AI for Image Generation (Google Imagen 3.0)
VERTEX_AI_API_KEY=your-production-vertex-ai-api-key
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
CREATIVE_ASSETS_BUCKET=creative-assets

# Google Custom Search Configuration
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-custom-search-engine-id

# SerpAPI Configuration (Use production/paid tier key)
SERPAPI_KEY=your-production-serpapi-key
USE_SERPAPI_PREMIUM=true
SERPAPI_FALLBACK_ENABLED=true

# Outscraper Configuration (Use production key)
OUTSCRAPER_API_KEY=your-production-outscraper-key

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment
APP_ENV=production
APP_PORT=8000
APP_HOST=0.0.0.0

# Rate Limiting Configuration
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PRO_TIER=100
RATE_LIMIT_WINDOW_MINUTES=60

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Invoice Processing Optimization
INVOICE_BATCH_PROCESSING=true
INVOICE_ASYNC_PROCESSING=true

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Configuration (Use managed Redis in production)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-if-required
# REDIS_URL=redis://:password@host:6379  # Alternative format

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# ClamAV Malware Scanner Configuration
CLAMAV_ENABLED=true
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# CSP Configuration (Disable report-only in production)
CSP_REPORT_ONLY=false
USE_GOOGLE_FONTS=true
CSP_REPORT_URI=/api/csp-report

# Cookie Security (Must be true in production)
COOKIE_SECURE=true
COOKIE_SAMESITE=strict

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
# 1. Generate JWT secret: openssl rand -base64 64
# 2. Create separate Supabase production project
# 3. Use production API keys with billing alerts
# 4. Set up monitoring for all external API usage
# 5. Enable RLS on all Supabase tables
# 6. Test in staging environment first
# 7. Keep backup of this file in secure vault (not git!)
# ============================================================================
