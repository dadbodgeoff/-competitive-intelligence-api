# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Docker files should use LF
Dockerfile* text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# JavaScript/TypeScript files should use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# SQL files
*.sql text eol=lf
